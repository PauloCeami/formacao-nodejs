<%- include('../partials/header',{title: title}); %>
    <%- include('../partials/navbar'); %>

        <div class="container-sm mt-3">
            <div class="card">
                <div class="card-header">
                    Responder - <%= pergunta.id %> - <%= pergunta.titulo %>
                </div>
                <div class="card-body">
                    <form action="/responder-pergunta" method="POST">
                        <input type="hidden" name="pergunta_id" value="<%= pergunta.id %>"
                            class="form-control form-control-sm">

                        <div class="mb-3">
                            <label for="formGroupExampleInput2" class="form-label">Sua melhor resposta</label>
                            <input type="text" name="resposta" class="form-control form-control-sm"
                                id="formGroupExampleInput2"
                                placeholder="coloque sua resposta da pergunta : '<%= pergunta.titulo %>' aqui ">
                        </div>
                        <div class="d-flex gap-2 mb-3">
                            <button type="submit" class="btn btn-outline-warning btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-floppy" viewBox="0 0 16 16">
                                    <path d="M11 2H9v3h2z"></path>
                                    <path
                                        d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z">
                                    </path>
                                </svg>
                                Responder
                            </button>
                            <button type="reset" class="btn btn-outline-dark btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-eraser" viewBox="0 0 16 16">
                                    <path
                                        d="M8.086 2.207a2 2 0 0 1 2.828 0l3.879 3.879a2 2 0 0 1 0 2.828l-5.5 5.5A2 2 0 0 1 7.879 15H5.12a2 2 0 0 1-1.414-.586l-2.5-2.5a2 2 0 0 1 0-2.828l6.879-6.879zm2.121.707a1 1 0 0 0-1.414 0L4.16 7.547l5.293 5.293 4.633-4.633a1 1 0 0 0 0-1.414l-3.879-3.879zM8.746 13.547 3.453 8.254 1.914 9.793a1 1 0 0 0 0 1.414l2.5 2.5a1 1 0 0 0 .707.293H7.88a1 1 0 0 0 .707-.293l.16-.16z" />
                                </svg>
                                limpar Formulário
                            </button>
                        </div>
                    </form>
                </div>
                <ul class="list-group">
                    <% respostas.forEach(function(resp){ %>
                        <li class="list-group-item">
                            <%= resp.id %> - <%= resp.resposta %>
                        </li>
                        <% })%>

                </ul>
                <div class="card-footer text-muted">
                    Aplicação NodeJs - pauloceami@gmail.com - github.com/pauloceami
                </div>
            </div>
        </div>



        <%- include('../partials/footer'); %>